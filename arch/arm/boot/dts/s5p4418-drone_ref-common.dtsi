#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "s5p4418.dtsi"

/ {
	memory {
		device_type = "memory";
		reg = <0x71000000 0x40000000>;
	};

	aliases {
		i2c3 = &i2c_gpio3;
	};

	soc {
		#include "s5p4418-pinctrl.dtsi"
		clocks {
			uart0:uart@c00a9000 { clock-frequency = <147500000>; };
			i2c0:i2c@c00ae000  { clock-frequency = <200000000>; };
		};

		serial0:serial@c00a1000 {
			status ="okay";
		};

		amba {
			pl08xdma0:pl08xdma@c0000000 {
				use_isr;
			};

			pl08xdma1:pl08xdma@c0001000 {
				use_isr;
			};
		};

		dw_mmc_2:dw_mmc@c0069000 {
			num-slots = <1>;
			bus-width = <4>;
			cap-mmc-highspeed;
			broken-cd;
			non-removable;
			clock-frequency = <100000000>;
			card-detect-delay = <200>;
			disable-wp;
			status = "okay";
			nexell,drive_dly = <0x0>;
			nexell,drive_shift = <0x03>;
			nexell,sample_dly = <0x00>;
			nexell,sample_shift = <0x2>;
		};

		dw_mmc_0:dw_mmc@c0062000 {
			num-slots = <1>;
			bus-width = <4>;
			cap-sd-highspeed;
			clock-frequency = <100000000>;
			card-detect-delay = <200>;
			disable-wp;
			cd-gpios = <&alive_0 1>;
			cd-inverted;
			nexell,drive_dly = <0x0>;
			nexell,drive_shift = <0x03>;
			nexell,sample_dly = <0x00>;
			nexell,sample_shift = <0x02>;
			status = "disabled";
		};

		watchdog@c0019000 {
			status = "okay";
		};

		rtc@c0010c00 {
			status = "okay";
		};

		nexell_usbphy: nexell-usbphy@c0012000 {
			status = "okay";
		};

		ehci@c0030000 {
			//samsung,vbus-gpio = <&gpio_d 21 0>;
			status = "okay";
			port@0 {
				status = "okay";
			};
		};

		ohci@c0020000 {
			status = "okay";
			port@0 {
				status = "okay";
			};
		};

		dwc2otg@c0040000 {
			pinctrl-names = "default";
			pinctrl-0 = <&otg_pwron>;
			gpios = <&gpio_d 21 0>;
			nouse_idcon = <1>;
			status = "okay";
		};

		pwm:pwm@c0018000 {
			status = "okay";
		};

		i2s_0:i2s@c0055000 {
			master-mode = <1>;
			mclk-in = <0>;
			trans-mode = <0>;
			frame-bit = <32>;
			sample-rate = <48000>;
			pre-supply-mclk = <1>;
			status = "okay";
		};

		i2c_0:i2c@c00a4000 {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;

			es8316: es8316@11 {
				compatible = "everest,es8316";
				reg = <0x11>;
			};
		};

		pinctrl@C0010000 {
			pinctrl-names = "default";
			pinctrl-0 = <&initial>;

			initial: initial-state {
				PIN_OUT(gpiod-21, LOW, FUNC0, NONE, STR3);
			};

			otg_pwron:otg_pwron {
				nexell,pins = "gpiod-21";
				nexell,pin-function = <0>;
				nexell,pin-pull = <0>;
				nexell,pin-strength = <3>;
			};
		};
	};	/*** soc ***/

	sound {
		compatible = "nexell,nexell-es8316";
		ch = <0>;
		sample-rate = <48000>;
		format = "S16";
		hpin-support = <1>;
		hpin-gpio = <&gpio_b 27 0>;
		hpin-level = <1>;
		amp-gpio = <&gpio_d 19 0>;
		i2s-controller = <&i2s_0>;
		audio-codec = <&es8316>;
	};

	i2c_gpio3: i2c@3 {
		compatible = "i2c-gpio";
		gpios = <&gpio_d 16 0 /* sda */
			&gpio_d 20 0>; /* scl */
		i2c-gpio,delay-us = <1>;
		#address-cells = <1>;
		#size-cells = <0>;

		axp228@34 {
			compatible = "x-powers,axp228";
			reg = <0x34>;
			interrupt-parent = <&alive_0>;
			interrupts = <0x4 IRQ_TYPE_EDGE_FALLING>;
			nx,id = <0>;
			#include "s5p4418-drone_ref-axp228.dtsi"
		};
	};
};

&dp_drm {
	status = "okay";
	ports {
		port@0 {
			reg = <0>;
			back_color = < 0x0 >;
			color_key = < 0x0 >;
			plane-names = "rgb", "primary", "video";
		};
		port@1 {
			reg = <1>;
			back_color = < 0x0 >;
			color_key = < 0xff00ff >;
			plane-names = "primary", "video";
		};
	};
};

&dp_drm_rgb {
	status = "ok";
	pinctrl-names = "default";
	pinctrl-0 = <&dp_rgb_vclk &dp_rgb_vsync &dp_rgb_hsync
	&dp_rgb_de &dp_rgb_R &dp_rgb_G &dp_rgb_B>;
	/* enable-gpios = <&gpio_c 2 0>; */
	/* remote-endpoint = <&rgb_panel>; */
	/* panel-mpu = <0>; */
	/* crtcs-possible-mask = <0x1>; */

	display-timing {
		clock-frequency = <88000000>;

		hactive = <1024>;
		vactive = <600>;

		hback-porch = <30>;
		hfront-porch = <30>;
		hsync-len = <4>;

		vback-porch = <10>;
		vfront-porch = <10>;
		vsync-len = <2>;

		hsync-active = <1>;
		vsync-active = <1>;
		pixelclk-active = <1>;
		de-active = <1>;
	};

	dp_control {
		clk_src_lv0 = <1>;
		clk_div_lv0 = <9>;
		clk_src_lv1 = <7>;
		clk_div_lv1 = <1>;
		out_format = <3>;
	};
};

&dp_drm_hdmi {
	ddc-i2c-bus = <&i2c_2>;
	status = "disabled";
};

